      }
      .info-box {
        background: #f8f9ff;
        border: 2px solid #667eea;
        border-radius: 12px;
        padding: 25px;
        margin: 25px 0;
      }
      .info-box h3 {
        color: #1a1a2e;
        font-size: 18px;
        margin-bottom: 15px;
      }
      .info-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 12px 0;
        border-bottom: 1px solid #e0e0e0;
      }
      .info-row:last-child {
        border-bottom: none;
      }
      .info-label {
        color: #666;
        font-weight: 500;
      }
      .info-value {
        font-family: 'Monaco', 'Menlo', monospace;
        background: #fff;
        padding: 8px 12px;
        border-radius: 6px;
        border: 1px solid #ddd;
        color: #333;
        font-weight: 600;
      }
      .info-text {
        color: #666;
        font-size: 14px;
        line-height: 1.5;
        margin-top: 15px;
      }
      .actions-list {
        list-style: none;
        padding: 0;
        margin: 0;
      }
      .actions-list li {
        padding: 10px 0;
        color: #333;
        font-size: 14px;
        line-height: 1.5;
        border-bottom: 1px solid #f0f0f0;
      }
      .actions-list li:last-child {
        border-bottom: none;
      }
      .warning-box {
        background: #fff7ed;
        border: 1px solid #fdba74;
        border-radius: 8px;
        padding: 20px;
        margin: 25px 0;
      }
      .warning-box h4 {
        color: #9a3412;
        font-size: 16px;
        margin-bottom: 15px;
      }
      .warning-list {
        list-style: none;
        padding: 0;
        margin: 0;
      }
      .warning-list li {
        padding: 8px 0;
        color: #9a3412;
        font-size: 14px;
        line-height: 1.5;
      }
      .cta-button {
        text-align: center;
        margin: 30px 0;
      }
      .cta-button a {
        display: inline-block;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        text-decoration: none;
        padding: 16px 40px;
        border-radius: 30px;
        font-size: 16px;
        font-weight: 600;
        transition: transform 0.2s, box-shadow 0.2s;
      }
      .cta-button a:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
      }
      .footer {
        background: #f8f9fa;
        padding: 30px;
        text-align: center;
        border-top: 1px solid #e9ecef;
      }
      .footer p {
        color: #666;
        font-size: 14px;
        margin-bottom: 8px;
      }
      .footer a {
        color: #667eea;
        text-decoration: none;
      }


doctype html
html(lang="pt-BR")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Bem-vindo ao TalentLoop
    style.
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        padding: 40px 20px;
      }
      .container {
        max-width: 600px;
        margin: 0 auto;
        background: #ffffff;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
      }
      .header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 40px 30px;
        text-align: center;
      }
      .header h1 {
        font-size: 28px;
        margin-bottom: 8px;
      }
      .header p {
        opacity: 0.9;
        font-size: 16px;
      }
      .content {
        padding: 40px 30px;
      }
      .welcome-box {
        text-align: center;
        margin-bottom: 30px;
      }
      .welcome-box h2 {
        color: #1a1a2e;
        font-size: 24px;
        margin-bottom: 12px;
      }
      .welcome-box p {
        color: #666;
        font-size: 16px;
        line-height: 1.6;
      }
      .company-name {
        font-size: 20px;
        font-weight: bold;
        color: #667eea;
        margin: 10px 0;
      }
      .plan-badge {
        display: inline-block;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 8px 20px;
        border-radius: 20px;
        font-weight: 600;
        margin: 15px 0;
      }
      .credentials-box {
        background: #f8f9ff;
        border: 2px solid #667eea;
        border-radius: 12px;
        padding: 25px;
        margin: 30px 0;
      }
      .credentials-box h3 {
        color: #1a1a2e;
        font-size: 18px;
        margin-bottom: 20px;
        text-align: center;
      }
      .credential-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 12px 0;
        border-bottom: 1px solid #e0e0e0;
      }
      .credential-row:last-child {
        border-bottom: none;
      }
      .credential-label {
        color: #666;
        font-weight: 500;
      }
      .credential-value {
        font-family: 'Monaco', 'Menlo', monospace;
        background: #fff;
        padding: 8px 12px;
        border-radius: 6px;
        border: 1px solid #ddd;
        color: #333;
      }
      .password-value {
        background: #fef3c7;
        border-color: #f59e0b;
        color: #92400e;
        font-weight: 600;
      }
      .tenant-value {
        background: #dbeafe;
        border-color: #3b82f6;
        color: #1e40af;
        font-weight: 600;
      }
      .security-notice {
        background: #fff7ed;
        border: 1px solid #fdba74;
        border-radius: 8px;
        padding: 15px;
        margin-top: 20px;
        display: flex;
        gap: 12px;
        align-items: flex-start;
      }
      .security-notice .icon {
        font-size: 24px;
      }
      .security-notice p {
        color: #9a3412;
        font-size: 14px;
        line-height: 1.5;
      }
      .info-notice {
        background: #eff6ff;
        border: 1px solid #93c5fd;
        border-radius: 8px;
        padding: 15px;
        margin-top: 15px;
        display: flex;
        gap: 12px;
        align-items: flex-start;
      }
      .info-notice .icon {
        font-size: 24px;
      }
      .info-notice p {
        color: #1e40af;
        font-size: 14px;
        line-height: 1.5;
      }
      .cta-button {
        text-align: center;
        margin: 30px 0;
      }
      .cta-button a {
        display: inline-block;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        text-decoration: none;
        padding: 16px 40px;
        border-radius: 30px;
        font-size: 16px;
        font-weight: 600;
        transition: transform 0.2s, box-shadow 0.2s;
      }
      .cta-button a:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
      }
      .footer {
        background: #f8f9fa;
        padding: 30px;
        text-align: center;
        border-top: 1px solid #e9ecef;
      }
      .footer p {
        color: #666;
        font-size: 14px;
        margin-bottom: 8px;
      }
      .footer a {
        color: #667eea;
        text-decoration: none;
      }


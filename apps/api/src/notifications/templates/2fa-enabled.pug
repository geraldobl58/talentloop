        font-size: 14px;
        line-height: 1.5;
      }
      .cta-button {
        text-align: center;
        margin: 30px 0;
      }
      .cta-button a {
        display: inline-block;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        text-decoration: none;
        padding: 16px 40px;
        border-radius: 30px;
        font-size: 16px;
        font-weight: 600;
        transition: transform 0.2s, box-shadow 0.2s;
      }
      .cta-button a:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
      }
      .footer {
        background: #f8f9fa;
        padding: 30px;
        text-align: center;
        border-top: 1px solid #e9ecef;
      }
      .footer p {
        color: #666;
        font-size: 14px;
        margin-bottom: 8px;
      }
      .footer a {
        color: #667eea;
        text-decoration: none;
      }


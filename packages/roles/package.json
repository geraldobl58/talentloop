{
  "name": "@talentloop/roles",
  "version": "1.0.0",
  "description": "Shared roles, permissions and RBAC utilities for TalentLoop",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {},
  "keywords": [
    "rbac",
    "roles",
    "permissions",
    "talentloop"
  ],
  "author": "TalentLoop",
  "license": "MIT"
}
